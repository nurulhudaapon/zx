pub fn Page(ctx: zx.PageCtx(root.AppCtx)) zx.Component {
    const allocator = ctx.arena;

    return (
        <div @allocator={allocator}>
            <h2>About ZX {ctx.app.port}</h2>
        </div>
    );
}

pub const options = zx.PageOptions{
    .methods = &.{.GET},
};

const zx = @import("zx");
const root = @import("root");
