pub fn FormatDemo(allocator: zx.Allocator) zx.Component {
    const count = 42;
    const hex_value = 255;
    const percentage = 75;

    return (
        <section @allocator={allocator}>
            <p>Count: {count}</p>
            <p>Hex: 0x{[hex_value:x]}</p>
            <p>Percentage: {percentage}%</p>
        </section>
    );
}

const zx = @import("zx");
