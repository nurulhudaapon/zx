{
  "name": "zx",
  "displayName": "ZX",
  "description": "ZX let's you write HTML within your Zig code.",
  "version": "0.0.4",
  "publisher": "nurulhudaapon",
  "icon": "images/zx-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/nurulhudaapon/zx"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "zig",
    "zigx",
    "syntax",
    "highlighting"
  ],
  "extensionDependencies": [
    "ziglang.vscode-zig"
  ],
  "activationEvents": [
    "workspaceContains:build.zig",
    "workspaceContains:build.zig.zon",
    "workspaceContains:./.zigversion"
  ],
  "main": "./out/extension",
  "contributes": {
    "configurationDefaults": {
      "explorer.autoRevealExclude": {
        "**/.zig-cache": true,
        "**/zig-cache": true
      }
    },
    "languages": [
      {
        "id": "zigx",
        "extensions": [
          ".zx"
        ],
        "aliases": [
          "ZX",
          "Zig"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "dark": "./images/zx-icon-dark.svg",
          "light": "./images/zx-icon-light.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "zigx",
        "scopeName": "source.zigx",
        "path": "./syntaxes/zigx.tmLanguage.json",
        "embeddedLanguages": {
          "meta.tag.zigx": "zigx-tags",
          "meta.tag.attributes.zigx": "zigx",
          "meta.embedded.expression.zigx": "zigx"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build-base -- --minify",
    "build-base": "esbuild --bundle --external:vscode --external:lodash-es --external:semver --external:libsodium-wrappers --external:vscode-languageclient --external:which src/extension.ts --outdir=out --platform=node --target=node20 --format=cjs --minify --legal-comments=none --drop:console",
    "build": "npm run build-base -- --sourcemap",
    "watch": "npm run build-base -- --sourcemap --watch",
    "test": "npm run compile && node ./node_modules/vscode/bin/test",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.14",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.0.0",
    "@types/semver": "^7.5.8",
    "@types/vscode": "^1.80.0",
    "@types/which": "^2.0.1",
    "@vscode/vsce": "^2.24.0",
    "esbuild": "^0.25.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "3.2.5",
    "typescript": "^5.4.3",
    "typescript-eslint": "^8.0.0"
  },
  "dependencies": {
    "libsodium-wrappers": "^0.7.15",
    "lodash-es": "^4.17.21",
    "semver": "^7.5.2",
    "vscode-languageclient": "10.0.0-next.15",
    "which": "^3.0.0"
  }
}