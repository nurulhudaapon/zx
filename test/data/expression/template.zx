pub fn Page(allocator: zx.Allocator) zx.Component {
    const count = 42;
    const name = "John";

    return (
        <section @allocator={allocator} class=`test-{count} {getThemeClass(.dark)}` data-name=`person-{name}` data-normal={name} data-text="{text}" data-t="`{text}`">
            <p>My name is {name}</p>
        </section>
    );
}

const Theme = enum { light, dark };
fn getThemeClass(theme: Theme) []const u8 {
    return switch (theme) {
        .light => "theme-light",
        .dark => "theme-dark",
    };
}

const zx = @import("zx");
