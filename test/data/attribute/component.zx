pub fn Page(allocator: zx.Allocator) zx.Component {
    const hello_child = (<div @allocator={allocator}>Hello!</div>);
    return (
        <section @allocator={allocator}>
            <ChildComponent children={hello_child} />
            <ChildComponent children={(<div>Hello!</div>)} />
        </section>
    );
}

const hello_child_outside = (<div @allocator={std.heap.page_allocator}>Hello!</div>);

const Props = struct { children: zx.Component };
pub fn ChildComponent(allocator: zx.Allocator, props: Props) zx.Component {
    return (
        <div @allocator={allocator}>
            {props.children}
        </div>
    );
}

const zx = @import("zx");
const std = @import("std");